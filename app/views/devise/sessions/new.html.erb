<div class="container">
  <div class="logo-container">
    <img id='logo-promo' src="https://www.promobiz.md/uploads/1/3/0/0/130050179/promobiz-logo-final.png" alt="">
    <p>Analizeaza-ti Salariul Aici</p>
  </div>
  <div class="form-container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: false,
                    placeholder: "Email Address" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: false,
                    placeholder: "Password" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'log-in-btn' %>
      </div>
      <div class="line"></div>
      <div class="rendered-links">
           <%= render "devise/shared/links" %>
      </div>
  </div>

  <% end %>
</div>
